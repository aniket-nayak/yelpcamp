<%- include("../partials/header") %>

<div class="row userPage">
    <div class="col-md-4">
        <h1><%=user.firstName %> <%= user.lastName %></h1>
        <div class="thumbnail">
            <img class="img-fluid" src="<%= user.avatar %>" alt="user profile image">
        </div>
        <div class="caption">
            <a href="mailto:<%= user.email %>"><%=user.email%></a>
        </div>
        <%= user.about %>
    </div>
    <div class="col-md-8">
        <h1><%=user.username%>'s campgrounds:</h1>
        <ul>
            <% campgrounds.forEach(function(campground){ %>
            <li><a href="/campgrounds/<%=campground.id %>"><%= campground.name %></a></li>
            <% }) %>
        </ul>
    </div>
    <button class="btn btn-primary"><a id="back_button" href="/campgrounds">Go Back</a></button>
</div>

<%- include("../partials/footer") %>