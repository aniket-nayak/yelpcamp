<%- include("./partials/header") %>
<div class="conatiner-sm form">
    <h1>SignUp</h1>
    <div class="row">
        <form action="/register" method="post" enctype="multipart/form-data">
            <div class="col md-6 ">
                <div class="form-group">
                    <label for="username">Username</label>
                    <input class="form-control" type="text" name="user[username]">
                </div>
            </div>
            <div class="col md-6 ">
                <div class="form-group">
                    <label for="password">Password</label>
                    <input class="form-control" type="password" name="password">
                </div>
            </div>
            <div class="col md-6 ">
                <div class="form-group">
                    <label for="firstName">First Name</label>
                    <input class="form-control" type="text" name="user[firstName]">
                </div>
            </div>
            <div class="col md-6 ">
                <div class="form-group">
                    <label for="lastName">Last Name</label>
                    <input class="form-control" type="text" name="user[lastName]">
                </div>
            </div>
            <div class="col md-6 ">
                <div class="form-group">
                    <label for="email">Email</label>
                    <input class="form-control" type="email" name="user[email]">
                </div>
            </div>
            <div class="col md-6 ">
                <div class="form-group">
                    <label for="avatar">Profile Photo</label>
                    <input type="file" id="avatar" name="avatar" accept="image/*" required>
                </div>
            </div>
            <div class="col md-6 ">
                <div class="form-group">
                    <label for="about">About</label>
                    <textarea class="form-control" name="user[about]" placeholder="Tell something about yourself"
                        rows="7"></textarea>
                </div>
            </div>
            <div class="form-group">
                <button class="btn btn-lg btn-primary btn-block" type="submit">Register</button>
            </div>
        </form>
        <p>Allready have a account? <a href="/login">Login</a></p>
    </div>


    <%- include("./partials/footer") %>